<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lapipetteprototype">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- VaccineCard -->
        <activity
            android:name="com.example.lapipetteprototype.VaccineCard"
            android:parentActivityName="com.example.lapipetteprototype.MainActivity"
            android:label="VaccineCard #TODO">

            <!-- support APIs < 16 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.lapipetteprototype.MainActivity" />
        </activity>
    </application>

</manifest>